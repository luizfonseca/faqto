source 'https://rubygems.org'
source 'https://rails-assets.org'

# Default ruby version to run this project
ruby '2.2.0'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.0'

# Use postgres as default database even for development
gem 'pg'

gem 'before_actions'
gem 'devise'

# Use unicorn as the app server
gem 'unicorn'
gem 'foreman'

# Templating engine to avoid too much tag typing
gem 'slim-rails'

# Using decorators, go check: https://github.com/drapergem/draper
gem 'active_decorator'

# For tags. Yet.
gem 'pg_array_parser'

gem 'spring', group: :development

# Necessary to generate _spec files when using rails generate
group :development, :test do
  gem 'rspec-rails'
end

# Only required when testing
group :test do
  gem 'shoulda'
end

gem 'sass-rails'
gem 'uglifier'
gem 'foundation-rails'
gem 'rails-assets-basscss'

# You know
gem 'jquery-rails'


# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
#gem 'jbuilder', '~> 1.0.1'

